<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= paginate @users %>

<table>
  <thead>
    <tr>
      <th>Active</th>
      <th>Display name</th>
      <th>Username</th>
      <th>Nickname</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.active %></td>
        <td><%= link_to user.display_name, user %></td>
        <td><%= link_to user.username, user %></td>
        <td><%= user.nickname %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
